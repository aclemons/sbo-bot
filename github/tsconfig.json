{
  "extends": ["@tsconfig/node-lts/tsconfig.json"],
  "include": ["src/"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./lib",
    "rewriteRelativeImportExtensions": true,
    "skipLibCheck": true,
    "strict": true
  }
}
